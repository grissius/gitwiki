{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "settings": {
        "import/core-modules": [
            "styled-jsx/css"
        ]
    },
    "rules": {
        "react/jsx-filename-extension": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "complexity": [
            "error",
            {
                "max": 5
            }
        ],
        "max-depth": [
            "error",
            {
                "max": 2
            }
        ],
        "max-statements": [
            "error",
            {
                "max": 10
            }
        ]
    }
}